<div class="container is-fluid mt-6">
  <div class="columns">
    <div class="column is-one-fifth has-text-centered">
      <h5 class="is-5">
        (icon options)
      </h5>
      <div id="icons">
        <figure id="i-white" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-white.png">
        </figure>
        <figure id="i-green" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-green.png">
        </figure>
        <figure id="i-grey" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-grey.png">
        </figure>
        <figure id="i-orange" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-orange.png">
        </figure>
        <figure id="i-pink" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-pink.png">
        </figure>
        <figure id="i-purple" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-purple.png">
        </figure>
        <figure id="i-red" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-red.png">
        </figure>
        <figure id="i-yellow" class="image is-64x64 mx-auto mt-1">
          <img class="is-rounded" src="/images/icon-yellow.png">
        </figure>
      </div>
    </div>
    <div class="column is-four-fifths has-text-centered">
      <h1 class="title is-1">
        MORE ABOUT YOU
      </h1>
      <figure class="image is-128x128 mx-auto">
        <img id="profile-icon" class="is-rounded" src="/images/icon-white.png">
      </figure>
      <div class="content">
        <h4 class="is-4">
          Select your profile icon
        </h4>
      </div>
      <div class="field has-text-left">
        <label class="label">User Name</label>
        <div class="control">
          <input id="name" class="input" type="text" placeholder="Your User Name" min="3" max="25" required>
        </div>
      </div>
      <div class="field has-text-left">
        <label class="label">Password</label>
        <div class="control">
          <input id="password" class="input" type="password" placeholder="Your Password" min="8" required>
        </div>
      </div>
      <div class="field has-text-left">
        <label class="label">Confirm Password</label>
        <div class="control">
          <input id="confirm-password" class="input" type="password" placeholder="Re-Enter Your Password" min="8" required>
        </div>
      </div>
      <input id="submit" type="submit" class="button is-normal is-dark is-rounded" value="Create Account">
      <br>
      <p>Or <a onclick="location.replace('/login')">sign in</a> if you already have an account.</p>
    </div>
  </div>
</div>

<script src="/js/aboutYou.js"></script>