<div class="container is-fluid mt-6">
  <div class="columns pt-6">
    <div class="column is-10 is-offset-1 has-text-centered">
      <h1 class="title is-1 is-uppercase has-text-weight-normal">
        What Piques your interest?
      </h1>
      {{!-- <h3 class="subtitle is-3 has-text-grey-light py-2 has-text-weight-normal pb-3">
        please select at least one category to continue
      </h3> --}}
    </div>
  </div>
  <div class="columns is-multiline is-variable is-8-desktop is-desktop"> {{!-- Container --}}
    {{#each prefs}}
    <div class="column is-4 card"> {{!-- First Card --}}
      <figure class="image is-32x32">
        <img src='' alt="" style="float: right;">
      </figure>
      <div class="columns">
        <div class="column has-text-centered">
          <h2 class="title is-3 is-uppercase has-text-weight-normal">
            {{n}}
          </h2>
          <div class="columns has-text-centered">
            <div class="column">
              <figure class="image is-square">
                <img src="{{printArr relImages 0}}" alt="Placeholder image">
              </figure>
            </div>
            <div class="column">
              <figure class="image is-square">
                <img src="{{printArr relImages 1}}" alt="Placeholder image">
              </figure>
            </div>
            <div class="column">
              <figure class="image is-square">
                <img src="{{printArr relImages 2}}" alt="Placeholder image">
              </figure>
            </div>
          </div>
          <div class="columns has-text-centered">
            <div class="column">
              <figure class="image is-square">
                <img src="{{printArr relImages 3}}" alt="Placeholder image">
              </figure>
            </div>
            <div class="column">
              <figure class="image is-square">
                <img src="{{printArr relImages 4}}" alt="Placeholder image">
              </figure>
            </div>
            <div class="column">
              <figure class="image is-square">
                <img src="{{printArr relImages 5}}" alt="Placeholder image">
              </figure>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{!-- error message - invalid input --}}
  <article class="message is-hidden" id="errorMessage">
    <div class="message-header">
      <p>Oops!</p>
      <button class="delete" id="delete-btn" aria-label="delete"></button>
    </div>
      <div class="message-body">
        Something went wrong. Please try again.
      </div>
  </article>
  <div class="columns">
    <div class="column is-2 is-offset-5 pb-5">
        <input id="submit" type="submit" class="button is-normal is-uppercase" value="let's go!">
    </div>
  </div>
</div>

<script src="/js/preferences.js"></script>